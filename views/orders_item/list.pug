extends ../layout

block content
    script(src='/javascripts/orders_item.js')
    h1= title
    button(id='create_orders_item') Создать
    button(id='delete_orders_item') Удалить
    table#tbl_orders_item
        tr 
            th id
            th ID Заказа
            th Продукт
            th Количество в заказе

    div#create_orders_item_popup.q-window
          div.q-window-block(style="width:300px;height:220px;margin:0px 0 0 -400px")
            div.q-window-header Добавить Элемент в заказ
              a#create_orders_item_popup_close(style="create: relative;left: 38px;") X
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  create(for="inpOrders_id") ID заказа
                  input#inpOrders_id(type="text")
                div.q-form-data
                  create(for="inpProduct_id") ID продукта
                  input#inpProduct_id(type="text")
                div.q-form-data 
                  create(for="inpQuantity") Количество
                  input#inpQuantity(type="text")  

            div.q-buttons
              a#submit_create_orders_item Создать
              a#cancel_create_orders_item Отменить

    div#delete_orders_item_popup.q-window
          div.q-window-block(style="width:300px;height:220px;margin:0px 0 0 -400px")
            div.q-window-header Удалить Заказ
              a#delete_orders_item_popup_close(style="delete: relative;left: 38px;") X
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  delete(for="inpId") id Заказа
                  input#inpId(type="INT")

            div.q-buttons
              a#submit_delete_orders_item Удалить
              a#cancel_delete_orders_item Отменить