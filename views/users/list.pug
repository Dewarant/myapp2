extends ../layout

block content
    script(src='/javascripts/users.js')
    h1= title
    button(id='create_users') Добавить
    button(id='update_users') Изменить
    table#tbl_users
        tr 
            th id
            th Логин
            th Имя
            th Роль
            th email 
            th password 
            th Дата создания
    

    div#create_users_popup.q-window
          div.q-window-block(style="width:300px;height:220px;margin:0px 0 0 -400px")
            div.q-window-header Добавить пользователя
              a#create_users_popup_close(style="position: relative;left: 38px;") X
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  label(for="inpLogin") Логин
                  input#inpLogin(type="text")
                div.q-form-data
                  label(for="inpUsername") Имя пользователя
                  input#inpUsername(type="text")  
                div.q-form-data
                  label(for="inpRoles") Роль
                  input#inpRoles(type="text")
                div.q-form-data
                  label(for="inpEmail") Email
                  input#inpEmail(type="text")
                div.q-form-data
                  label(for="inpPassword") Пароль
                  input#inpPassword(type="text")

            div.q-buttons
              a#submit_create_users Создать
              a#cancel_create_users Отменить
    
    div#update_users_popup.q-window
          div.q-window-block(style="width:300px;height:220px;margin:0px 0 0 -400px")
            div.q-window-header Изменить пользователя
              a#update_users_popup_close(style="position: relative;left: 38px;") X
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  label(for="UpLogin") Изменить Логин на
                  input#UpLogin(type="text")  
                div.q-form-data
                  label(for="UpEmail") Изменить Email на 
                  input#UpEmail(type="text")
                div.q-form-data
                  label(for="UpPassword") Изменить Пароль на
                  input#UpPassword(type="text")
                div.q-form-data
                  label(for="UpId") Введите id пользователя 
                  input#UpId(type="INT") 

            div.q-buttons
              a#submit_update_users Изменить
              a#cancel_update_users Отменить